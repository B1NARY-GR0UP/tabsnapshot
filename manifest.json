{
  "manifest_version": 3,
  "name": "tabsnapshot",
  "version": "0.3.1",
  "description": "A Chrome extension that allows you to create and manage snapshots of your tabs.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "128": "images/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
